<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Async wrapper for console output -->
    <target xsi:type="AsyncWrapper" name="asyncConsole" overflowAction="Discard">
      <target xsi:type="Console" layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=tostring}" />
    </target>
  </targets>

  <rules>
    <!-- Log Info and above level messages only to console -->
    <logger name="*" minLevel="Info" writeTo="asyncConsole" />
  </rules>
</nlog>
